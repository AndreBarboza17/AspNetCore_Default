@model ErrorViewModel
@{
    ViewData["Title"] = "Ocorreu um erro";
}

@{
    if (Model == null)
    {
        <div>
            <p><strong>Ops! Ocorreu um erro, mas não se preocupe. Nosso time será avisado e iremos corrigir em breve.</strong></p>
        </div>
    }
    else
    {
        <h1>@Html.Raw(Model.Titulo)</h1>
        <h2 class="text-danger">@Html.Raw(Model.Mensagem).</h2>
    }
}